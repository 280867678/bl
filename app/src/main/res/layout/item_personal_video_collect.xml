<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_12dp"
    android:paddingEnd="@dimen/dimen_12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_12dp"
        android:paddingBottom="@dimen/dimen_12dp">

        <FrameLayout
            android:layout_width="@dimen/dimen_176dp"
            android:layout_height="@dimen/dimen_99dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_cover_default"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/dimen_5dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lines="1"
                android:paddingStart="@dimen/dimen_6dp"
                android:paddingTop="@dimen/dimen_3dp"
                android:paddingEnd="@dimen/dimen_6dp"
                android:paddingBottom="@dimen/dimen_3dp"
                android:textColor="@color/color_1a"
                android:textSize="@dimen/dimen_10sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.1"
                android:lines="2"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/second_text_size" />

            <com.example.boluouitest2.comod.baselib.view.CustomTextView
                android:id="@+id/tv_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:includeFontPadding="false"
                android:textColor="@color/second_text_color"
                android:textSize="@dimen/third_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.example.boluouitest2.comod.baselib.view.CustomTextView
                    android:id="@+id/tv_video_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:textColor="@color/third_text_color"
                    android:textSize="@dimen/third_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/color_f0f1f2_line" />
</LinearLayout>
