<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_abs_recyclerview_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/layout_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_12dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingEnd="@dimen/dimen_12dp"
        android:paddingBottom="@dimen/dimen_8dp">

        <TextView
            android:id="@+id/tv_comment_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rectangle_color_f5_corner_20"
            android:includeFontPadding="false"
            android:paddingStart="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_15dp"
            android:paddingBottom="@dimen/dimen_8dp"
            android:text="@string/str_add_comment_hint"
            android:textColor="@color/color_b3"
            android:textSize="@dimen/primary_text_size" />
    </LinearLayout>
</LinearLayout>
